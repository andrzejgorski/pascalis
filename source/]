    Prog. Program   ::= "program" Var ";" Decl "incipe" Instr "fini."
    Dec.  Decl      ::= "variabilis" Var ":" Type

    EAdd. Exp  ::= Exp  "+" Exp1 ;
    ESub. Exp  ::= Exp  "-" Exp1 ;
    EMul. Exp1 ::= Exp1 "*" Exp2 ;
    EDiv. Exp1 ::= Exp1 "/" Exp2 ;
    EInt. Exp2 ::= Integer ;

    coercions Exp 2 ;

    TInt.   Type ::= "numeri integri" ;
